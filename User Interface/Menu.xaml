<Window x:Class="VetBookingSystem.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetBookingSystem"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <TextBlock Name="Greeting" FontSize="16" FontWeight="Bold" Margin="20,20,0,0"/>
        <Button Content="Book Appointment" VerticalAlignment="Top" Margin="20,100,0,0" Click="BookAppointmentButton_Click" Width="200"/>
        <Button Content="View Appointments" VerticalAlignment="Top" Margin="20,150,0,0" Click="ViewAppointmentsButton_Click" Width="200"/>
        <Button Content="Exit" VerticalAlignment="Top" Margin="20,200,0,0" Click="ExitButton_Click" Width="200"/>
    </Grid>
</Window>
